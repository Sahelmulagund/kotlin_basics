<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_16_dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DialogFragment">

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_dialog"
        app:backgroundTint="@color/orange"
        android:id="@+id/simpleDialog"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_dialog"
        app:backgroundTint="@color/pink"
        android:id="@+id/simpleDialog2"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/single_choice_dialog"
        app:backgroundTint="@color/purple"
        android:id="@+id/singleChoiceDialog"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/multi_choice_dialog"
        app:backgroundTint="@color/blue"
        android:id="@+id/multiChoiceDialog"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/progress_dialog"
        app:backgroundTint="@color/light_blue"
        android:id="@+id/progressDialog"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/progress_dialog"
        app:backgroundTint="@color/green"
        android:id="@+id/progressDialog2"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_picker_dialog"
        app:backgroundTint="@color/light_green"
        android:id="@+id/datePicker"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_picker_dialog"
        app:backgroundTint="@color/dark_yellow"
        android:id="@+id/timePicker"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bottom_dialog"
        app:backgroundTint="@color/red"
        android:id="@+id/bottomDialog"/>


</LinearLayout>